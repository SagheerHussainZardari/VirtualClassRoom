<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/currentclasscardback">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:alpha="0.1"
                android:src="@drawable/ic_checkclass" />

            <TextView
                android:id="@+id/tv_classTeacherName_recycler_currentclassess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Dr.Hira Fatima Naqvi"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_classNameAndBatch_recycler_currentclassess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_classTeacherName_recycler_currentclassess"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="2K17 - Electronics"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_classDateTime_recycler_currentclassess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_classNameAndBatch_recycler_currentclassess"
                android:layout_marginStart="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="12-Jul-2020 - 9:00AM-10:00AM"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


            <TextView
                android:id="@+id/tv_classZoomID_recycler_currentclassess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_classDateTime_recycler_currentclassess"
                android:layout_marginStart="0dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Zoom ID: 786-786-7866"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/tv_classZoomPassword_recycler_currentclassess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_classZoomID_recycler_currentclassess"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="0dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Zoom Password: 123456"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold|italic" />


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_joinMeeting_recycler_currentclassess"
                style="@style/style_button"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_classZoomPassword_recycler_currentclassess"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="onLoginStudentClicked"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                app:cardCornerRadius="10dp"
                app:elevation="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradientback_withroundcorners">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Join Zoom Meeting"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>