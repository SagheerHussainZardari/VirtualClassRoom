<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".TeacherFiles.Fragments.YoutubeLecturesFragment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:text="Add Youtube Lectures"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_YoutubeLink"
        style="@style/style_edittext_scheduleClass"
        android:hint="Paste Youtube Link Here..."
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_upload_youtube_link"
        style="@style/style_button"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:cardCornerRadius="10dp"
        app:elevation="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradientback_withroundcorners">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Upload Lecture"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>