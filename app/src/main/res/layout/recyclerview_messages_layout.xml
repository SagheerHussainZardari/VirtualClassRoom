<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/roll_number"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:gravity="center_vertical|center_horizontal"
            android:text="898"
            android:background="@drawable/circle"

            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_message2"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textColor="#fff"
            android:paddingLeft="12dp"
            android:layout_marginBottom="16dp"
            android:text="This Is Message From Ssagheer Hussain Zardari This Is Message From Ssagheer Hussain Zardari And He WIll Be Here In 5 Minuts"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_message1"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textColor="#fff"
            android:paddingLeft="12dp"
            android:layout_marginBottom="8dp"
            android:text="This Is Message From Ssagheer Hussain Zardari This Is Message From Ssagheer Hussain Zardari And He WIll Be Here In 5 Minuts"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>